<body class="post-body">
<div class="container-fluid">
	<div class="row">
		<div class="col-xs-12">
			<span>
			<h1 class="my-header" id="mypost-header"> <%= @post.location %> <small style="float:right"> 
			<% if @previous_post != nil %>
				<%= link_to post_path(@previous_post), :class => "btn btn-default", :id => "post-nav" do %>
					<span class="glyphicon glyphicon-chevron-left"></span>			
				<% end %>
			<% else %>
					<span class="glyphicon glyphicon-chevron-left" style="color: #ededed" id="post-nav"></span> 
			<% end %>
			<% if @next_post != nil %>
				<%= link_to post_path(@next_post), :class => "btn btn-default", :id => "post-nav" do %>
					<span class="glyphicon glyphicon-chevron-right"></span> 			
				<% end %>
			<% else %>
					<span class="glyphicon glyphicon-chevron-right" style="color: #ededed" id="post-nav"></span> 
			<% end %></small> </h1>
			 </span>
		</div>


		<div class="col-xs-1" id="post-back">
			<%= link_to blog_path(@post.blog_id), :class => "btn btn-default", :id => "post-back" do %>
				<p><span class="glyphicon glyphicon-chevron-left"></span> Back to Blog</p>
			<% end %>
		</div>


		<div class="col-xs-10 col-xs-offset-1 post">
			<div class="post-title">
				<h3> <%= @post.title %> <small> <%=@post.created_at.strftime("%b %d") %> </h3>
			</div>
			<div class="post-content">
				<p> <%= @post.content.html_safe %> </p>
			</div>
			<div class="comment-area">
				<div class="comments">
					<h3> <%= @post.comments.count %> comments </h3>
					<% if @post.comments != nil %>
						<% @comments.reverse_each do |comment| %>
							<%= render "comments/show", :comment => comment, :post => @post %>
						<% end %>
					<% end %>
				</div>
				<%= render "comments/form" %>
			</div>
		</div>
		</div>
</div>
</body>
