<div class="container-fluid">
	<div class="row">
		<div class="col-xs-2" id="sidebar">
			<h2> Edit Post </h2>
			<%= link_to blog_path(@post.blog_id), :class => "btn btn-default", :id => "post-back" do %>
				<span class="glyphicon glyphicon-chevron-left"></span> Back			
			<% end %>
		</div>
		<div class="col-xs-9 col-xs-offset-3">
			<%= simple_form_for @post, html: {class: "form-horizontal"} do |f| %>
				<div class="form-group">
					<%= f.label :title, class: 'control-label' %>
					  <%= f.text_field :title, class: 'form-control'%>
					</div>
				<div class="form-group">
					<%= f.label :content, class: 'control-label'%>
					  <%= f.cktext_area :content, class: 'form-control', :id => 'sometext', :ckeditor => {:uiColor => '#ffffff'} %>
					  <%= f.hidden_field :blog_id, :value => params[:blogID] %>
					</div>
				<div class="form-group">
					<%= f.label :location, class: 'control-label'%>
					  <%= f.text_field :location, class: 'form-control'%>
					</div>
				<div class="form-group">
					  <%= f.submit "Edit Post", :class => "btn btn-primary" %>
					</div>
				<% end %>
				</div>
		</div>
		</div>
</div>